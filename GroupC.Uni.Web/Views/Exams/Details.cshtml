@model GroupC.Uni.Web.ViewModels.ExamViewModel
<style>

    col-lg-6 h2 {
        font-size: 48px;
        color: #40424a;
        font-family: 'Josefin Sans', sans-serif;
    }

    .hero-info dl dt span {
        color: #40424a;
        display: inline-block;
        min-width: 220px;
    }

    /*.hero-info dl dd {
        font-size: 18px;
        color: #808181;
    }*/
</style>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-10 offset-xl-1">
                <div class="row">
                    <div class="col-sm-3"> </div>
                    <div class="col-sm-6 box-body with-border" style="background-color:white; border-top: 3px solid #d2d6de;">
                        <div class="col-sm-7">
                            <div style="border-bottom: 1px solid #d2d6de;">
                                <h3>Exam Details</h3>

                            </div>
                            <div class="hero-info">
                                <div></div>
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.DurationInMinutes)
                                        
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.DurationInMinutes)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.QuestionsCount)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.QuestionsCount)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.CourseViewModel)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.CourseViewModel.Name)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.TestCenterViewModel)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.TestCenterViewModel.Name)
                                    </dd>
                                    <dt>Questions </dt>
                                    <dd>
                                        <table class="table" id="#QuestionExamTable">
                                            <thead>
                                                <tr>
                                                    <th>Text</th>
                                                    <th>Mark</th>
                                                    <th>Topic Name</th>
                                                    <th>Choices</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.ExamQuestionsViewModel)
                                                {

                                                    <tr>
                                                        <td> @item.Question.Text</td>
                                                        <td> @item.Mark</td>
                                                        <td> @item.Question.TopicName</td>
                                                        <td>
                                                            <ol>
                                                                @foreach (var ch in item.Question.Choices)
                                                                {
                                                                    @*<li style="color:limegreen">@ch.Text</li>*@
                                                                    @if (ch.Type)
                                                                    {
                                                                        <li style="color:limegreen">@ch.Text</li>}
                                                                    @if (!ch.Type)
                                                                    {
                                                                        <li style="color:red">@ch.Text</li>}
                                                                }
                                                            </ol>
                                                        </td>

                                                    </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </dd>
                                </dl>
                            </div>
                            <hr style="border-top: 1px solid #d2d6de;" />
                            <div class="form-group center-block">
                                <a class="btn btn-github" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                <a class="btn btn-danger delete"
                                   data-id="@Model.Id"
                                   data-controller="Courses"
                                   data-action="Delete"
                                   data-body-message="Are you sure you want to delete this question?">
                                    delete
                                </a>
                                <div class="clearfix"></div>

                            </div>

                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</section>